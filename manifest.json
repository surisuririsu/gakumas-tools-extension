{
  "name": "Gakumas Tools",
  "description": "Tools for playing Gakuen Idolmaster",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "action": {
    "default_title": "Gakumas Tools"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "side_panel.html"
  }
}